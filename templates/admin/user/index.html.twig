{% extends 'base.html.twig' %}

{% block title %}Gestion des utilisateurs{% endblock %}

{% block body %}
<div class="container py-4">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-1">Gestion des utilisateurs</h1>
            <p class="text-muted mb-0">
                {{ users|length }} utilisateur(s) enregistré(s)
            </p>
        </div>

        <div class="d-flex gap-2">
            <form method="get" class="d-flex">
                <input type="text" name="q" value="{{ app.request.get('q') }}"
                       class="form-control form-control-sm me-2"
                       placeholder="Rechercher (nom, email)…">
                <button class="btn btn-sm btn-outline-secondary">
                    <i class="bi bi-search"></i>
                </button>
            </form>

            {# Bouton d'ajout éventuel (si route existante) #}
            {# <a href="{{ path('app_admin_user_new') }}" class="btn btn-sm btn-primary">
                <i class="bi bi-plus-lg me-1"></i> Nouvel utilisateur
            </a> #}
        </div>
    </div>

    <!-- Card -->
    <div class="card shadow-sm border-0">
        <div class="card-header bg-white d-flex justify-content-between align-items-center">
            <span class="fw-semibold">
                <i class="bi bi-people me-1"></i> Liste des utilisateurs
            </span>
            <span class="text-muted small">
                Dernière mise à jour : {{ "now"|date("d/m/Y H:i") }}
            </span>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="text-nowrap">ID</th>
                            <th>Prénom / Nom</th>
                            <th>Email</th>
                            <th>Rôles</th>
                            <th>Statut</th>
                            <th class="text-nowrap">Créé le</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        <tr>
                            <td class="text-muted small">#{{ user.id }}</td>
                            <td>
                                <div class="fw-semibold">
                                    {{ user.firstName }} {{ user.lastName }}
                                    {% if app.user and app.user.id == user.id %}
                                        <span class="badge bg-info-subtle text-info-emphasis ms-1 small">
                                            Moi
                                        </span>
                                    {% endif %}
                                </div>
                            </td>
                            <td>
                                <a href="mailto:{{ user.email }}" class="text-decoration-none">
                                    <i class="bi bi-envelope me-1"></i>{{ user.email }}
                                </a>
                            </td>
                            <td>
                                {% for role in user.roles %}
                                    <span class="badge bg-secondary-subtle text-secondary-emphasis me-1">
                                        {{ role }}
                                    </span>
                                {% endfor %}
                            </td>
                            <td>
                                {% if user.isActive %}
                                    <span class="badge bg-success-subtle text-success-emphasis">
                                        <i class="bi bi-circle-fill me-1 small"></i>Actif
                                    </span>
                                {% else %}
                                    <span class="badge bg-danger-subtle text-danger-emphasis">
                                        <i class="bi bi-circle-fill me-1 small"></i>Désactivé
                                    </span>
                                {% endif %}
                            </td>
                            <td class="text-muted small">
                                {{ user.createAt ? user.createAt|date('d/m/Y H:i') : '—' }}
                            </td>
                            <td class="text-center">
                                {% if app.user and app.user.id == user.id %}
                                    <span class="text-muted small fst-italic">Aucune action</span>
                                {% else %}
                                    <div class="d-flex justify-content-center gap-2">

                                        {# Exemple si tu as une route "edit" #}
                                        {# <a href="{{ path('app_admin_user_edit', {id: user.id}) }}"
                                           class="btn btn-sm btn-outline-primary rounded-3"
                                           title="Modifier">
                                            <i class="bi bi-pencil"></i>
                                        </a> #}

                                        <form method="post"
                                              action="#', {id: user.id}) }}"
                                              onsubmit="return confirm('Confirmer le changement de statut de cet utilisateur ?');"
                                              class="m-0">
                                            <button class="btn btn-sm rounded-3
                                                {{ user.isActive ? 'btn-outline-warning' : 'btn-outline-success' }}"
                                                    title="{{ user.isActive ? 'Désactiver' : 'Activer' }}">
                                                {% if user.isActive %}
                                                    <i class="bi bi-slash-circle me-1"></i> Désactiver
                                                {% else %}
                                                    <i class="bi bi-check-circle me-1"></i> Activer
                                                {% endif %}
                                            </button>
                                        </form>
                                    </div>
                                {% endif %}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7" class="text-center py-4 text-muted">
                                <i class="bi bi-emoji-neutral mb-2 d-block" style="font-size:2rem;"></i>
                                Aucun utilisateur trouvé.
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <div class="card-footer bg-white d-flex justify-content-between align-items-center">
            <span class="text-muted small">
                Affichage de {{ users|length }} utilisateur(s)
            </span>
            {# Zone pour pagination plus tard #}
            {# {{ knp_pagination_render(users) }} #}
        </div>
    </div>
</div>
{% endblock %}
